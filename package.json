{
  "name": "MRDPSTOCK",
  "version": "1.0.0",
  "description": "Application de stockage et logistique",
  "author": "Frédéric Geffriaud <expedition@mrdps27.fr>",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64 --publish=never"
  },
  "build": {
    "appId": "com.mrdp.stock",
    "productName": "MRDPSTOCK",
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
